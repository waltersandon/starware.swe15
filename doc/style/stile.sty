%       \begin{resizedtikzpicture}{\textwidth}
%           ...
%       \end{resizedtikzpicture}
\newsavebox\mybox
\newenvironment{resizedtikzpicture}[1]{%
    \def\mywidth{#1}%
    \begin{lrbox}{\mybox}%
    \begin{tikzpicture}
}{%
    \end{tikzpicture}%
    \end{lrbox}%
    \ifdim\wd\mybox>\mywidth
        \resizebox{\mywidth}{!}{\usebox\mybox}%
    \else
        \usebox\mybox %
    \fi
}
